<h1>New comentario</h1>

<% remote_form_for(@comentario) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :conteudo %><br />
    <%= f.text_area :conteudo %>
  </p>
  <p>
    <%= f.hidden_field :comentavel_id %><br>
    <%= f.hidden_field :comentavel_type %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', comentarios_path %>